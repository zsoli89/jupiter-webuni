<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:12.1 https://infinispan.org/schemas/infinispan-config-12.1.xsd"
        xmlns="urn:infinispan:config:12.1">


    <!-- This configuration is suitable for non-clustered environments, where only single instance accesses the DB -->
    <cache-container name="SpringCacheManager" >

        <local-cache name="courseSearchResults" >
            <transaction mode="NONE" />
            <expiration max-idle="10000" interval="2000"/>
            <memory max-count="10000"/>
        </local-cache>

        <local-cache name="studentTimetableResults" >
            <transaction mode="NONE" />
            <expiration max-idle="10000" interval="2000"/>
            <memory max-count="10000"/>
        </local-cache>

    </cache-container>

</infinispan>
